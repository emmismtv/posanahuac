@model PuntoVentaApp.Models.Producto

@{
    ViewData["Title"] = "Crear Productos";
}

<h2>Crear Nuevo Producto</h2>

<!-- Mostrar alerta si hay un mensaje -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div>
    <form asp-controller="CrearProductos" asp-action="CrearProducto" method="post">
        <div class="form-group p-2">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="form-group p-2">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        </div>
        <div class="form-group p-2">
            <label asp-for="Cantidad" class="control-label"></label>
            <input asp-for="Cantidad" class="form-control" type="number" />
        </div>
        <div class="form-group p-2">
            <label asp-for="SKU" class="control-label"></label>
            <input asp-for="SKU" class="form-control" />
        </div>
        <div class="form-group pt-3 pb-3">
            <label asp-for="Disponible" class="control-label"></label>
            <input type="checkbox" class="form-check-input" asp-for="Disponible" value="true" />
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
    </form>
    
</div>
